{

  "description": "Firefox password generator extension based off the famous xkcd password comic",
  "manifest_version": 2,
  "name": "easyTypePassword",
  "version": "1.0",
  "homepage_url": "https://github.com/Aaron-Bopp/easyTypePassword",
  "icons": {
    "48" : "icons/lock-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/lock-32.png",
    "theme_icons": [{
        "light": "icons/lock-32-light.png",
        "dark": "icons/lock-32.png",
        "size": 32
    }],
    "default_title": "easyTypePassword",
    "default_popup": "popup/copy_password.html"
  }}